FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code and static assets
COPY . .

# Verify static assets are present
RUN echo "ğŸ” Verifying static assets..." && \
  echo "ğŸ“ Current directory structure:" && \
  ls -la && \
  if [ -d "public/" ]; then \
  echo "ğŸ“ Public directory found:" && \
  ls -la public/ && \
  if [ -d "public/logos/" ]; then \
  echo "ğŸ¨ Logos directory found:" && \
  ls -la public/logos/; \
  else \
  echo "âš ï¸ No logos directory in public/"; \
  fi; \
  else \
  echo "âš ï¸ No public directory found"; \
  fi && \
  echo "âœ… Static assets verification completed"

# Build the application
RUN npm run build

# Verify build output includes static assets
RUN echo "ğŸ” Verifying build output..." && \
  echo "ğŸ“ Build output directory:" && \
  ls -la dist/ && \
  if [ -d "dist/assets/" ]; then \
  echo "ğŸ“¦ Assets directory found:" && \
  ls -la dist/assets/; \
  else \
  echo "âš ï¸ No assets directory in dist/"; \
  fi && \
  if [ -d "dist/logos/" ]; then \
  echo "ğŸ¨ Logos in dist found:" && \
  ls -la dist/logos/; \
  else \
  echo "â„¹ï¸ Logos will be served from public/"; \
  fi && \
  echo "âœ… Build output verified"

# Production stage
FROM nginx:alpine AS production

# Copy built application from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy custom nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]



