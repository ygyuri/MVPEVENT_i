# UAT (User Acceptance Testing) Environment Configuration
# Copy this file to .env.uat and update with your UAT values

# Application Configuration
NODE_ENV=uat
SERVER_PORT=5000
FRONTEND_URL=https://uat.event-i.co.ke
BASE_URL=https://uat.event-i.co.ke

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=uat-secure-mongodb-password
MONGODB_URI=mongodb://admin:uat-secure-mongodb-password@mongodb:27017/event_i_uat?authSource=admin

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration (UAT - production-like security)
JWT_SECRET=uat-super-secure-jwt-secret-change-in-production
JWT_REFRESH_SECRET=uat-super-secure-refresh-secret-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Configuration (UAT - Production-like testing)
PAYHERO_API_USERNAME=uat-payhero-username
PAYHERO_API_PASSWORD=uat-payhero-password
PAYHERO_ACCOUNT_ID=uat-payhero-account-id
PAYHERO_BASIC_AUTH_TOKEN=uat-payhero-basic-auth-token
PAYHERO_CHANNEL_ID=uat-payhero-channel-id
PAYHERO_CALLBACK_URL=https://uat.event-i.com/api/payhero/callback
PAYHERO_SUCCESS_URL=https://uat.event-i.com/checkout/success
PAYHERO_FAILED_URL=https://uat.event-i.com/checkout/failed

# MPESA Configuration (UAT - Production-like testing)
MPESA_BASE_URL=https://api.safaricom.co.ke
MPESA_CONSUMER_KEY=uat-mpesa-consumer-key
MPESA_CONSUMER_SECRET=uat-mpesa-consumer-secret
MPESA_PASSKEY=uat-mpesa-passkey
MPESA_SHORTCODE=uat-mpesa-shortcode
MPESA_CALLBACK_URL=https://uat.event-i.com/api/orders/mpesa/callback
MPESA_TIMEOUT_URL=https://uat.event-i.com/api/orders/mpesa/timeout

# Email Configuration (UAT)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=uat@event-i.com
SMTP_PASS=uat-app-password
EMAIL_FROM=noreply@uat.event-i.com

# Security Configuration (UAT - production-like)
TICKET_QR_SECRET=uat-secure-qr-secret
TICKET_QR_ENC_KEY=uat-base64-encoded-encryption-key
TICKET_QR_AUTO_ROTATE_MS=60000

# Rate Limiting (UAT - production-like)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Debug Configuration
DEBUG=false
LOG_LEVEL=warn
