# Staging Environment Configuration
# Copy this file to .env.staging and update with your staging values

# Application Configuration
NODE_ENV=staging
SERVER_PORT=5000
FRONTEND_URL=https://staging.event-i.com
BASE_URL=https://staging.event-i.com

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=staging-secure-mongodb-password
MONGODB_URI=mongodb://admin:staging-secure-mongodb-password@mongodb:27017/event_i_staging?authSource=admin

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration (Staging - more secure than dev)
JWT_SECRET=staging-super-secure-jwt-secret-change-in-production
JWT_REFRESH_SECRET=staging-super-secure-refresh-secret-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Configuration (Staging - Test environment)
PAYHERO_API_USERNAME=staging-payhero-username
PAYHERO_API_PASSWORD=staging-payhero-password
PAYHERO_ACCOUNT_ID=staging-payhero-account-id
PAYHERO_BASIC_AUTH_TOKEN=staging-payhero-basic-auth-token
PAYHERO_CHANNEL_ID=staging-payhero-channel-id
PAYHERO_CALLBACK_URL=https://staging.event-i.com/api/payhero/callback
PAYHERO_SUCCESS_URL=https://staging.event-i.com/checkout/success
PAYHERO_FAILED_URL=https://staging.event-i.com/checkout/failed

# MPESA Configuration (Staging - Test environment)
MPESA_BASE_URL=https://sandbox.safaricom.co.ke
MPESA_CONSUMER_KEY=staging-mpesa-consumer-key
MPESA_CONSUMER_SECRET=staging-mpesa-consumer-secret
MPESA_PASSKEY=staging-mpesa-passkey
MPESA_SHORTCODE=staging-mpesa-shortcode
MPESA_CALLBACK_URL=https://staging.event-i.com/api/orders/mpesa/callback
MPESA_TIMEOUT_URL=https://staging.event-i.com/api/orders/mpesa/timeout

# Email Configuration (Staging)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@event-i.com
SMTP_PASS=staging-app-password
EMAIL_FROM=noreply@staging.event-i.com

# Security Configuration (Staging)
TICKET_QR_SECRET=staging-secure-qr-secret
TICKET_QR_ENC_KEY=staging-base64-encoded-encryption-key
TICKET_QR_AUTO_ROTATE_MS=60000

# Rate Limiting (Staging)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Debug Configuration
DEBUG=false
LOG_LEVEL=info
