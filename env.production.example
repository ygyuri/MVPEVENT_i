# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Configuration
NODE_ENV=production
SERVER_PORT=5001
FRONTEND_URL=https://event-i.co.ke
BASE_URL=https://event-i.co.ke

# GKE Configuration
KUBERNETES_NAMESPACE=event-i
GKE_CLUSTER_NAME=event-i-cluster
GKE_ZONE=us-central1-a
PROJECT_ID=your-project-id

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=production-secure-mongodb-password
MONGODB_URI=mongodb://admin:production-secure-mongodb-password@mongodb.event-i.svc.cluster.local:27017/event_i_production?authSource=admin&replicaSet=rs0

# Redis Configuration
REDIS_URL=redis://:redis-password@redis.event-i.svc.cluster.local:6379

# JWT Configuration (Production - maximum security)
JWT_SECRET=production-super-secure-jwt-secret-generate-with-openssl-rand-base64-32
JWT_REFRESH_SECRET=production-super-secure-refresh-secret-generate-with-openssl-rand-base64-32
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Configuration (Production)
PAYHERO_API_USERNAME=production-payhero-username
PAYHERO_API_PASSWORD=production-payhero-password
PAYHERO_ACCOUNT_ID=production-payhero-account-id
PAYHERO_BASIC_AUTH_TOKEN=production-payhero-basic-auth-token
PAYHERO_CHANNEL_ID=production-payhero-channel-id
PAYHERO_CALLBACK_URL=https://event-i.com/api/payhero/callback
PAYHERO_SUCCESS_URL=https://event-i.com/checkout/success
PAYHERO_FAILED_URL=https://event-i.com/checkout/failed

# MPESA Configuration (Production)
MPESA_BASE_URL=https://api.safaricom.co.ke
MPESA_CONSUMER_KEY=production-mpesa-consumer-key
MPESA_CONSUMER_SECRET=production-mpesa-consumer-secret
MPESA_PASSKEY=production-mpesa-passkey
MPESA_SHORTCODE=production-mpesa-shortcode
MPESA_CALLBACK_URL=https://event-i.com/api/orders/mpesa/callback
MPESA_TIMEOUT_URL=https://event-i.com/api/orders/mpesa/timeout

# Email Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=production@event-i.com
SMTP_PASS=production-app-password
EMAIL_FROM=noreply@event-i.com

# Security Configuration (Production - maximum security)
TICKET_QR_SECRET=production-secure-qr-secret-generate-with-openssl-rand-base64-32
TICKET_QR_ENC_KEY=production-base64-encoded-encryption-key-generate-with-openssl-rand-base64-32
TICKET_QR_AUTO_ROTATE_MS=60000

# Rate Limiting (Production - strict)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Debug Configuration
DEBUG=false
LOG_LEVEL=error

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/event-i/app.log