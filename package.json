{
  "name": "event-i",
  "version": "1.0.0",
  "description": "Modern event management platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "docker:dev": "./start-docker.sh",
    "docker:prod": "./start-event-i-local.sh start",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:status": "docker-compose ps",
    "env:setup": "cp env.example .env && echo 'âœ… .env file created from env.example'",
    "domain:setup": "./setup-local-domain.sh add",
    "domain:remove": "./setup-local-domain.sh remove",
    "domain:status": "./setup-local-domain.sh status",
    "domain:test": "./setup-local-domain.sh test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "events",
    "web3",
    "react",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "socket.io-client": "^4.8.1"
  }
}
